#[std]

fn yes_or_no(prompt: &char) -> bool {
    putstr(prompt);
    let input = get_char();
    while input == '\r' || input == '\n' {
        input = get_char();
    }
    return input == 'y' ||
           input == 'Y';
}


const C = 1;
const GO = 2;
const TYPESCRIPT = 3;
